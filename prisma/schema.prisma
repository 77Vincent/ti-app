generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String             @id @default(cuid())
  name          String?
  email         String?            @unique
  emailVerified DateTime?
  image         String?
  isSoundEnabled Boolean           @default(true)
  isLargeQuestionTextEnabled Boolean @default(false)
  accounts      Account[]
  sessions      Session[]
  testSessions  TestSession[]
  favorites     FavoriteQuestion[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TestSession {
  id                 String   @id @default(cuid())
  userId             String?
  anonymousSessionId String?  @unique
  subjectId          String
  subcategoryId      String
  difficulty         String
  difficultyCooldownRemaining Int @default(0)
  correctCount       Int      @default(0)
  submittedCount     Int      @default(0)
  recentOutcomes     Int[]    @default([])
  recentQuestionResults Json  @default("[]")
  currentQuestionId  String?
  startedAt          DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, subjectId, subcategoryId])
}

model QuestionPool {
  id               String   @id
  subjectId        String
  subcategoryId    String
  prompt           String   @db.Text
  difficulty       String
  options          Json
  correctOptionIndexes Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  favorites        FavoriteQuestion[]

  @@index([subjectId, subcategoryId, difficulty, id])
}

model QuestionRaw {
  id                   String   @id
  subjectId            String
  subcategoryId        String
  prompt               String   @db.Text
  difficulty           String
  options              Json
  correctOptionIndexes Json
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model QuestionCandidate {
  id                   String   @id
  subjectId            String
  subcategoryId        String
  prompt               String   @db.Text
  difficulty           String
  options              Json
  correctOptionIndexes Json
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model FavoriteQuestion {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  question QuestionPool @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId])
  @@index([questionId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
